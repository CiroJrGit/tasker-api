generator client {
  provider = "prisma-client-js"
  output   = "./generated/client-mongodb"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL_MONGO")
}

model User {
  id String @id @map("_id")

  taskLists TaskList[]
  notes     Note[]
}

model TaskList {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  title     String
  createdAt DateTime @default(now())
  color     String
  deleted   Boolean  @default(false)

  user  User   @relation(fields: [userId], references: [id])
  tasks Task[]
}

model Task {
  id         String   @id @default(uuid()) @map("_id")
  taskListId String
  desc       String
  createdAt  DateTime @default(now())
  completed  Boolean  @default(false)

  taskList TaskList @relation(fields: [taskListId], references: [id])
}

model Note {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  title     String
  content   String
  createdAt DateTime @default(now())
  color     String
  deleted   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
}
